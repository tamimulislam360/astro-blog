---
import Social from "./Social.astro";
const socialPlatforms = [
    {
        platform: 'facebook',
        userName: 'tamimulislam360'
    },
    {
        platform: 'github',
        userName: 'tamimulislam360'
    },
    {
        platform: 'linkedin',
        userName: 'in/tamimulislam360'
    },
]
---

<footer>
    {
        socialPlatforms.map(platform => <Social platform={platform.platform} userName={platform.userName} />)
    }
</footer>

<style>
    footer{
        display: flex;
        gap: 20px;
    }
</style>